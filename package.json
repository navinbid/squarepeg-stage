    "@types/react-dom": "^18.0.6",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "cypress": "^12.5.1",
    "eslint": "^8.20.0",
    "eslint-plugin-hydrogen": "0.12.3",
    "eslint-plugin-storybook": "^0.6.11",
