{
  "name": "hydrogen-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "npm run build:css && shopify hydrogen build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "dev": "npm run build:css && concurrently -g -r npm:dev:css \"shopify hydrogen dev\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "preview": "npm run build && shopify hydrogen preview",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx .",
    "format": "prettier --write --ignore-unknown .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install && yarn build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{html,md,json}": "prettier --write"
  },
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@okendo/shopify-hydrogen": "^2.0.2",
    "@portabletext/react": "^3.0.4",
    "@remix-run/react": "1.15.0",
    "@sanity/client": "^6.1.2",
    "@sanity/image-url": "^1.0.2",
    "@sanity/types": "^3.14.4",
    "@shopify/cli": "3.45.0",
    "@shopify/cli-hydrogen": "^5.0.0",
    "@shopify/hydrogen": "^2023.7.7",
    "@shopify/remix-oxygen": "^1.1.0",
    "clsx": "^1.2.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "http-proxy-middleware": "^2.0.6",
    "isbot": "^3.6.5",
    "jwt-decode": "^3.1.2",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-input-mask": "^2.0.4",
    "react-intersection-observer": "^9.4.1",
    "react-to-print": "^2.15.1",
    "react-use": "^17.4.0",
    "remix-utils": "^6.6.0",
    "schema-dts": "^1.1.0",
    "snakecase-keys": "^5.5.0",
    "tiny-invariant": "^1.2.0",
    "typographic-base": "^1.0.4",
    "uuid": "^9.0.0",
    "xhr2": "^0.2.1",
    "xml2js": "^0.6.2",
    "yet-another-react-lightbox": "^3.11.4"
  },
  "devDependencies": {
    "@remix-run/dev": "1.15.0",
    "@remix-run/eslint-config": "1.15.0",
    "@remix-run/testing": "^1.17.0",
    "@shopify/cli": "3.39.0",
    "@shopify/cli-hydrogen": "3.39.0",
    "@shopify/eslint-plugin": "^42.0.1",
    "@shopify/oxygen-workers-types": "^3.17.2",
    "@shopify/prettier-config": "^1.1.2",
    "@storybook/addon-essentials": "^7.0.5",
    "@storybook/addon-interactions": "^7.0.5",
    "@storybook/addon-links": "^7.0.5",
    "@storybook/addon-styling": "^1.0.1",
